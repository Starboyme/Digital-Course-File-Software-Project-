            <a id="courses" class="btn btn-primary sidebarr pl-1 pr-1" onclick="fun1()">Search Files</a><br>
            <script>
              function fun1()
                    {
                        document.getElementById("col-10").innerHTML="\
                        <form action='/admin_filesfromdates' method='GET'>\
                          <input type='hidden' name='username' value='<%=username%>' >\
                          <div class='card-deck'>\
                          <div class='card'>\
                          <div class='card-body'>\
                          <label for='fromdate'>From: </label>\
                          <input type='date' name='fromdate' id='fromdate'><br>\
                          </div>\
                          </div>\
                          <div class='card'>\
                          <div class='card-body'>\
                          <label for='todate'>To: </label>\
                          <input type='date' name='todate' id='todate'>\
                          </div>\
                          </div>\
                          </div>\
                          <input class='btn btn-primary mt-2 ml-auto' type='submit'>\
                        </form>\
                        ";

                    }
            </script>

