        <div class="col-10" id="col-10">
          <%if(course){%>
            <% for(var i=0;i< course.length ;i++) { %>
              <div class="card-deck">
                  <div class="card">
                    <div class="card-body">
                      <a class="card-title" id="courseid" href="/admin_coursepage?username=<%=username%>&courseid=<%=course[i].course_id %>"><%=course[i].course_id %> -- <%=course[i].course_name %> -- <%=course[i].syllabus_id%></a>
                    </div>
                  </div>
                </div>
                <% } %>
          <% } %>      
          
          <%if(faculty){%>
            <% for(var i=0;i< faculty.length ;i++) { %>
              <div class="card-deck">
                  <div class="card">
                    <div class="card-body">
                      <a class="card-title" id="courseid" href="#"><%=faculty[i].faculty_id %> -- <%=faculty[i].firstName %> -- <%=faculty[i].lastName %></a>
                    </div>
                  </div>
                </div>
                <% } %>
          <% } %> 

          <%if(filedetails){%>
            <% for(var i=0;i<filedetails.length ;i++) { %>
              <div class="card-deck">
                  <div class="card">
                    <div class="card-body">
                      <a class="card-title" id="courseid" href="/file/<%= filedetails[i].filename %>" target="_blank"><%=filedetails[i].facultyid %>         <%=filedetails[i].courseid %>         <%=filedetails[i].filename %>         <%=filedetails[i].filetype %>         <%=filedetails[i].date %>         <%=filedetails[i].time %></a>
                    </div>
                  </div>
                </div>
                <% } %>
          <% } %> 


